{% extends 'base.twig' %}
{% block content %}

    <div class="row">
        <div class="col-xs-12" style="margin-bottom:50px;">
        </div>
        <div class="col-xs-12">


            <form class="form-horizontal"  action="index.php?id=resizeresult" method="post">

                <div class="form-group">
                    <label class="control-label col-sm-4" for="path">Relative path to search:</label>
                    <div class="col-sm-8">
                        <input type="text" value="{{ session.get('dir')}}" class="form-control" name="dir" placeholder="Enter Relative path">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="path">Filetypes:</label>
                    <div class="col-sm-8">
                        <input type="checkbox" name="filetypes[]" value="*.jpg" {% if '*.jpg' in session.get('resize-filetypes') %}checked{%  endif %}>*.jpg &nbsp;&nbsp;&nbsp;
                        <input type="checkbox" name="filetypes[]" value="*.png" {% if '*.png' in session.get('resize-filetypes') %}checked{%  endif %} >*.png &nbsp;&nbsp;&nbsp;
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="path">Size bigger than:</label>
                    <div class="col-sm-8">
                        <input type="number" name="size"   value="{{ session.get('size')!='' ? session.get('size'):1}}" class="form-control" style="width:50%;display:inline-block;">
                        <select name="stype" id="" class="form-control" style="width:90px;display:inline-block;">
                            <option value="K" {% if session.get('resize-stype')=="K" %}selected{% endif %}>Kb</option>
                            <option value="M"  {% if session.get('resizestype')=="M" or session.get('stype')=='' %}selected{% endif %}>Mb</option>   </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="path">Resize to  (in px) :</label>
                    <div class="col-sm-8">
                        <input type="number" value="{{ session.get('resize-amount')}}" class="form-control" name="resize-amount" placeholder="Enter size in px" style="width:50%;display:inline-block;">

                        <select name="resize-param" id="" class="form-control" style="width:90px;display:inline-block;">
                            <option value="width" {% if session.get('resize-param')=="width" %}selected{% endif %}>width</option>
                            <option value="height" {% if session.get('resize-param')=="height" %}selected{% endif %}>height</option>
                        </select><br/>
                        second size will be set automatically - constant aspect ratio (proportion)
                    </div>
                </div>




                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-primary">Search for fotos</button>
                    </div>
                </div>
            </form>





        </div>
    </div>
{%  endblock %}

{% block m2 %} class="active" {% endblock %}